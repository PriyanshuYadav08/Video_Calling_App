<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/local_user_video"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#8e8e8e"/>

        <FrameLayout
            android:id="@+id/remote_video"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#8e8e8e"
            android:layout_below="@id/local_user_video"/>

        <Button
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Join Call"
            android:textAllCaps="true"
            android:layout_below="@id/remote_video"
            android:layout_alignStart="@id/remote_video"/>

        <Button
            android:id="@+id/leaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Leave Call"
            android:textAllCaps="true"
            android:layout_below="@id/remote_video"
            android:layout_alignEnd="@id/remote_video"/>

    </RelativeLayout>
</ScrollView>